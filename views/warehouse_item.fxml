<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="90.0" prefWidth="650.0" styleClass="card"
      stylesheets="@../stylesheet/app.css"
      xmlns="http://javafx.com/javafx/22"
      xmlns="http://javafx.com/fxml/1">
    <padding>
        <Insets left="10.0" right="10.0" />
    </padding>
    <children>
        <ImageView fitHeight="88.0" fitWidth="144.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@Desktop/Faker.jpg" />
            </image>
        </ImageView>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="67.0" text="Name" textAlignment="CENTER" />
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="87.0" prefWidth="159.0" text="Descibe" textAlignment="CENTER" />
        <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="105.0" styleClass="add-remove-layout" stylesheets="@../stylesheet/app.css">
            <children>
                <Button mnemonicParsing="false" prefHeight="28.0" prefWidth="2.0" style="-fx-background-color: trasparent;" text="-">
                    <font>
                        <Font name="Corbel" size="15.0" />
                    </font>
                </Button>
                <Label alignment="CENTER" prefHeight="30.0" prefWidth="51.0" text="1">
                    <font>
                        <Font name="Corbel Light" size="18.0" />
                    </font>
                </Label>
                <Button mnemonicParsing="false" prefHeight="28.0" prefWidth="2.0" style="-fx-background-color: trasparent;" text="+">
                    <font>
                        <Font name="Corbel" size="15.0" />
                    </font>
                </Button>
            </children>
        </HBox>
        <Label alignment="CENTER" prefHeight="74.0" prefWidth="127.0" text="\$1B">
            <font>
                <Font name="Corbel Light" size="18.0" />
            </font>
        </Label>
        <Button mnemonicParsing="false" style="-fx-background-color: trasparent;">
            <graphic>
                <ImageView fitHeight="39.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@Desktop/Faker.jpg" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</HBox>
